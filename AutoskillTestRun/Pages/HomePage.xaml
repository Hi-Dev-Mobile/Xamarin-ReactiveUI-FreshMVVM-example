<?xml version="1.0" encoding="UTF-8"?>
<local:BasePage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="AutoskillTestRun.Pages.HomePage"
    xmlns:behaviours="clr-namespace:AutoskillTestRun.Behaviors"
    xmlns:local="clr-namespace:AutoskillTestRun;assembly=AutoskillTestRun">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Name="Add" 
            Command="{Binding AddCommand}" 
            Order="Primary" 
            Priority="0" />
    </ContentPage.ToolbarItems>
    
    <local:BasePage.Content>
        <StackLayout>
            
            <ListView 
                x:Name="ListView"
                ItemsSource="{Binding Contacts}" 
                SelectedItem="{Binding SelectedContact}" >

                <ListView.Behaviors>
                    <behaviours:EventToCommandBehavior
                        Command = "{Binding SelectedCommand}"
                        EventName="ItemSelected"/>
                </ListView.Behaviors>
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell 
                            Text="{Binding Name}"   
                            Detail="{Binding Phone}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </StackLayout>
    </local:BasePage.Content>
</local:BasePage>
